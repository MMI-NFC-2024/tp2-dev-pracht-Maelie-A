---
import Layout from "../layouts/Layout.astro";
import GraphicSpecies from "../components/GraphicSpecies.astro";
---
<Layout title="TP2 — Ancres & Slider">
  <h1 class="text-3xl font-bold mb-4">Version ancres + slider</h1>

  <nav class="mb-4 flex gap-3 text-sm">
    <a href="#adelie"   class="px-3 py-1 rounded border">Adelie</a>
    <a href="#gentoo"   class="px-3 py-1 rounded border">Gentoo</a>
    <a href="#chinstrap" class="px-3 py-1 rounded border">Chinstrap</a>
  </nav>

  <!-- Slider horizontal avec scroll-snap (Tailwind) -->
  <div class="flex gap-6 overflow-x-auto snap-x snap-mandatory scroll-p-6">
    <section id="adelie" class="snap-start min-w-full">
      <GraphicSpecies species="Adelie" title="Adelie — Scatterplot" />
    </section>

    <section id="gentoo" class="snap-start min-w-full">
      <GraphicSpecies species="Gentoo" title="Gentoo — Scatterplot" />
    </section>

    <section id="chinstrap" class="snap-start min-w-full">
      <GraphicSpecies species="Chinstrap" title="Chinstrap — Scatterplot" />
    </section>
  </div>
</Layout>
